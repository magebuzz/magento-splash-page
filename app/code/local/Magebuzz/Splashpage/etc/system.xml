<?xml version="1.0"?>
<config>
	<sections>
		<web>
			<groups>
				<splashpage translate="label">
					<label>Splash Page</label>
					<sort_order>500</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>0</show_in_store>
					<fields>						
						<is_active translate="label comment">
              <label>Enable Splash Page</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>10</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>0</show_in_website>
              <show_in_store>0</show_in_store>
            </is_active>
						<splash_page translate="label" module="cms">
							<label>CMS Splash Page</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_cms_page</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<depends><is_active>1</is_active></depends>
						</splash_page>
						<cookie_time translate="label comment">
              <label>Cookie Time</label>
              <frontend_type>text</frontend_type>
              <sort_order>30</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>0</show_in_website>
              <show_in_store>0</show_in_store>
							<comment><![CDATA[number of days]]></comment>
							<depends><is_active>1</is_active></depends>
            </cookie_time>						
					</fields>	
				</splashpage>
			</groups>
		</web>
	</sections>
</config>